<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <!-- Large, bold top app bar with centered title and subtle shadow/elevation -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="8dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="?attr/colorSurface"
            app:title="Schedule AI"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleCentered="true"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineMedium"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingTop="0dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Sleeker Input Card with integrated mic button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:strokeColor="@color/md_theme_light_outline"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayout"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:hint="Кажете или внесете команда"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="18dp"
                    app:boxCornerRadiusTopEnd="18dp"
                    app:boxCornerRadiusBottomStart="18dp"
                    app:boxCornerRadiusBottomEnd="18dp"
                    app:boxBackgroundColor="?attr/colorSurfaceVariant"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_mic"
                    app:endIconTint="?attr/colorPrimary"
                    app:endIconContentDescription="Говорно внесување">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actions Row with Material3 FilledTonalButtons -->
            <LinearLayout
                android:id="@+id/actionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:weightSum="3"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSummarize"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Сумирај"
                    app:icon="@drawable/ic_summarize"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.TonalButton"
                    app:cornerRadius="28dp"
                    android:layout_marginEnd="12dp"
                    android:textSize="14sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCalendar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Календар"
                    app:icon="@drawable/ic_calendar"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.TonalButton"
                    app:cornerRadius="28dp"
                    android:layout_marginEnd="12dp"
                    android:textSize="14sp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Сподели"
                    app:icon="@drawable/ic_share"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.TonalButton"
                    app:cornerRadius="28dp"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Enhanced Results Card with better padding, elevation, and text separation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Transcription Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:layout_marginBottom="24dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_transcription"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Транскрипција"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="?attr/colorPrimary"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvTranscription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Транскрипцијата ќе се појави тука"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:lineSpacingExtra="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutline"
                        android:alpha="0.3"
                        android:layout_marginBottom="24dp"/>

                    <!-- Summary Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_summarize"
                            android:tint="?attr/colorSecondary"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Сумирање"
                                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                android:textColor="?attr/colorSecondary"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvSummary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Сумирањето ќе се појави тука"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:lineSpacingExtra="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>